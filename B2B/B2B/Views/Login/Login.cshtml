@model B2B.Models.UserRegistration

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        
    
    if(ViewBag.Message != null)
    {
        <div>
            <h3>@ViewBag.Message</h3>
        </div>
    }
    
    <div id="username" class=" row col-lg-12 col-md-4 text-center">
        @Html.LabelFor(model => model.user_name, "User Name", new { @style = "color:white" })
    
        @Html.TextBoxFor(model => model.user_name, new { @class = "input-lg" })
        @Html.ValidationMessageFor(model => model.user_name, "", new { @style = "color:red" })
    </div>
    <div id="password" class=" row col-lg-12 col-md-4 text-center text-center">
        @Html.LabelFor(model => model.password, "Password", new { @style = "color:white" })

        @Html.PasswordFor(model => model.password, new { @class = "input-lg" })
        @Html.ValidationMessageFor(model => model.password, "", new { @style = "color:red" })
    </div>
    <br/>    <br />
    <div class="col-lg-12 col-md-4 text-center">
        <input type="submit" value="Login" class="btn btn-primary" />

        @Html.ActionLink("Register", "Register", "Login", new { }, new { @class = "btn btn-primary" })
    </div>
}